{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_checksum": "07b94e6b1a0b0260b94c83d6bb76b26bf7a310dc78d7a9c7432809fb9bc6194a",
      "iso_url": "http://ftp.unicamp.br/pub/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-2009.iso",
      "ssh_username": "augustoliks",
      "ssh_password": "augustoliks",
      "ssh_wait_timeout": "50000s",
      "cd_files": ["ks.cfg"],
      "cd_label": "cidata",
      "boot_command": [
        "<esc>",
        "<wait>linux inst.ks=cdrom:/ks.cfg<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": 16000,
      "hard_drive_interface": "sata",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "shutdown_command": "echo 'augustoliks' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/firstboot.sh"
      ],
      "execute_command": "echo 'augustoliks' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ]
}
